export class toDoItem{
    name = "";
    progress = 0;
    itemsComplete = 0;
    totalItems = 0;
    complete = false;
    priority = 0;
    dueDate = "";
    path = "";
    checklists = {};

    constructor(attributes){
        this.name = attributes.name;
        this.dueDate = attributes.dueDate === "" ? null: attributes.dueDate;
        this.priority = attributes.priority === "" ? null: attributes.priority;
        this.path = attributes.path;
        this.itemsComplete = 0;
        this.totalItems = 0;
    }

    createChecklist(name){
        let list = new checklist(name);
        list.path = this.path + "/" + name;
        this.checklists[list.name] = list;
    }
